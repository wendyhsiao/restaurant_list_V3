      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal mb-3">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <div style="display: flex; justify-content:flex-end	;">
                <a href="/restaurants/{{{this.id}}}/edit" class="btn btn-outline-primary mr-1">編輯</a>
                <a href="/restaurants/{{{this.id}}}" class="btn btn-outline-primary mr-1">店家資訊</a>
                <form action="/restaurants/{{{this.id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-outline-danger">刪除</button>
                </form>
              </div>

            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>